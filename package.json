{
  "name": "xc-game",
  "version": "0.0.0",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:js": "browserify  --debug src/main.js -o static/bundle.js -t babelify",
    "postbuild:js": "uglifyjs static/bundle.js -o static/bundle.js",
    "prebuild:icons": "svgo -f static/icons",
    "build:icons": "svgstore static/icons/*.svg -p 'xc-' -o static/icons.svg",
    "watch": "npm-run-all --parallel watch:*",
    "watch:js": "watchify -v --debug src/main.js -o static/bundle.js -t babelify",
    "serve": "http-server -c-1 -o",
    "serve:docs": "documentation serve src/main.js",
    "dev": "npm-run-all --parallel watch:js serve"
  },
  "dependencies": {
    "three": "*"
  },
  "devDependencies": {
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-preset-es2015": "*",
    "babelify": "*",
    "box-intersect": "^1.0.1",
    "browserify": "*",
    "http-server": "*",
    "watchify": "*"
  },
  "private": true,
  "license": "GPLV2"
}
