{
  "name": "xc-game",
  "version": "0.0.0",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "prebuild": "mkdir -p build/static",
    "build:js": "browserify  --debug src/main.js -o build/static/bundle.js -t babelify",
    "postbuild:js": "uglifyjs build/static/bundle.js -o build/static/bundle.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:js": "watchify -v --debug src/main.js -o build/static/bundle.js -t babelify",
    "serve": "http-server -c-1 -o",
    "serve:docs": "documentation serve src/main.js",
    "dev": "npm-run-all --parallel watch:js serve"
  },
  "dependencies": {
    "three": "*"
  },
  "devDependencies": {
    "axios": "^0.15.3",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-preset-es2015": "*",
    "babelify": "*",
    "box-intersect": "^1.0.1",
    "browserify": "*",
    "http-server": "*",
    "npm-run-all": "*",
    "snapsvg": "^0.4.0",
    "uglifyjs": "*",
    "watchify": "*"
  },
  "private": true,
  "license": "GPLV2"
}
